[init]
    defaultBranch = main

[color]
    ui = auto

[core]
    pager = delta --paging=never

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    side-by-side = true

[delta "interactive"]
    keep-plus-minus-markers = false

[diff]
    tool = nvim

[difftool "nvim"]
    cmd = NVIM_APPNAME=my-nvim nvim -d $LOCAL $REMOTE
