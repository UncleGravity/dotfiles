#compdef vm

# Completion function for vm command
function _vm() {
  local -a actions vm_names
  actions=(
    'ls:List all VMs'
    'start:Start a VM'
    'stop:Stop a VM'
    'pause:Pause a VM'
    'resume:Resume a paused VM'
    'restart:Restart a VM'
    'shell:Open a shell in a VM'
    'code:Open VS Code for a VM'
    'cursor:Open Cursor for a VM'
    'run:Run a command in a VM'
  )
  vm_names=(${(k)VM_CONFIG})

  _arguments \
    '1:action:->actions' \
    '*::arg:->args'

  case $state in
    actions)
      _describe -t actions 'vm actions' actions
      ;;
    args)
      case $words[1] in
        start|stop|pause|resume|restart|shell|run)
          _describe -t vm_names 'vm names' vm_names
          ;;
        code|cursor)
          if (( CURRENT == 2 )); then
            _describe -t vm_names 'vm names' vm_names
          elif (( CURRENT == 3 )); then
            _arguments '*:flag:(-d)'
          fi
          ;;
        run)
          if (( CURRENT == 2 )); then
            _describe -t vm_names 'vm names' vm_names
          else
            _normal
          fi
          ;;
      esac
      ;;
  esac
}